INSERT INTO facts (id, fact_name, fact) VALUES (10, 'ROBOTIC VISITORS', 'Two NASA missions have explored Mercury: Mariner 10 was the first to fly by Mercury, and MESSENGER was the first to orbit. ESA''s BepiColombo is on its way to Mercury.');
